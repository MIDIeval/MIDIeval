<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.xycontroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <com.beta.UIControls.XYController
         android:id="@+id/xy_controller"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     
     <TableLayout
         android:id="@+id/xy_settingtable"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/xy_controller"
         >
         <TableRow
             android:id="@+id/xy_settingRow_01"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:padding="5dp">
             
              <Switch
       		  	android:id="@+id/switch_01"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:switchMinWidth = "50dp"
        		android:switchPadding="50dp"
        		android:minWidth="50dp"
        		android:text="X-Var" />
              <SeekBar 
                  android:id="@+id/seek_01"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:id="@+id/text_01"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
             
         </TableRow>
         
         
     </TableLayout>

</RelativeLayout>
